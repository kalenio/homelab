logging {
  level  = "info"
  format = "logfmt"
}

loki.source.file "router" {
  targets = [
    {
      __path__ = "/var/log/router.log",
      labels = {
        job    = "router",
        source = "quasar1",
      },
    },
  ]
  forward_to = [loki.write.router.receiver]
}

loki.write "router" {
  endpoint {
    url = "http://loki:3100/loki/api/v1/push"
  }
}
